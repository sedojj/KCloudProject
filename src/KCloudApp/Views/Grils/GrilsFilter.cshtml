@model KCloudApp.Models.Grils.GrilsFilterCheckboxViewModel[]

<form asp-action="Filter" asp-controller="Grils" method="post">
    <ul>
        @for (int i = 0; i < Model.Length; i++)
        {
            <li>
                <span class="checkbox js-postback">
                    <input type="checkbox" asp-for="@Model[i].IsChecked" />
                    <label asp-for="@Model[i].IsChecked">@Model[i].DisplayName</label>
                </span>
                <input type="hidden" asp-for="@Model[i].Codename" />
                <input type="hidden" asp-for="@Model[i].DisplayName" />
            </li>
        }
    </ul>
</form>